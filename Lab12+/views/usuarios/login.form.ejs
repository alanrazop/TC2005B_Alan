<%- include('../includes/head.ejs') %>
<div class="title">Acceder</div>
<form action="login" method="POST">
<input type="hidden" name="_csrf" value="<%= csrfToken %>" >
<fieldset>
    <legend class="is-size-3">Ingresa tus datos</legend>
    <label for="username"> Usuario:</label>
    <input class="input" id="username" name="username" type="text" required>
    <label for="password"> Password:</label>
    <input class="input" id="password" name="password" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
</fieldset>
<br>
<div class="block"><a href="/user/new">Crear un nuevo usario</a></div>
<input type="submit" class="button is-link" value="Entrar">
</form>
<%- include('../includes/foot.ejs') %>