<%- include('./includes/head.ejs') %>
<div class="is-size-3">Registra a tu nuevo usuario de la fuerza</div>
<% if (rival == "") { %>
    <form action="/rivales/new" method="POST">
<% } else { %>
    <form action="/rivales/edit" method="POST">
<% } %>

    <fieldset>
        <label for="equipo">Rival:</label>
        <div class="column is-half">
        <input id="id" name="id" type="hidden" value="<%= rival.id %>">
        <input class="input is-two-thirds is-rounded is-primary" placeholder="Jedi o Sith" id="nombre" name="nombre" type="text" value="<%= rival.nombre %>" required>
        </div>    
    </fieldset>
    <br>
    <input type="submit" class="button is-primary" value="Registrar">
</form>
<%- include('./includes/foot.ejs') %>